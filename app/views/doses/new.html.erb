<div class="container">
  <h1>Add a new dose</h1>

  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit "Add a dose", class:"btn btn-success" %>
  <% end %>
  <%= link_to 'Back to the cocktail', cocktail_path(@cocktail), class:"btn btn-info mt-3" %>
</div>
