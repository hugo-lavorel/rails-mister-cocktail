<div class="container">
  <h1><%= @cocktail.name %></h1>
  <div class="cocktail-card">
    <div class="cocktail-picture">
      <% if @cocktail.photo.attached? %>
        <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
    </div>
    <div class="cocktail-ingredient">
      <h2>Ingredients</h2>
      <% @cocktail.doses.each do |dose|%>
        <p><%= dose.ingredient.name %> | <%= dose.description %> <%= link_to "Remove",
                    cocktail_dose_path(dose),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %></p>
      <% end %>
      <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class:"btn btn-success" %>
    </div>
  </div>
  <%= link_to 'Back to the list', cocktails_path, class:"btn btn-info" %>
</div>
