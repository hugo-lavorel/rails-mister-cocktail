<h1 class="text-center">- Chez Mama -</h1>
<p class="sub-title">Drink well - Live well</p>
  <div class="container">
    <div class="row justify-content-center">
      <% @cocktails.each do |cocktail| %>
        <div class="col-4 mb-3">
          <div class="card">
            <h3><%= link_to "#{cocktail.name}", cocktail_path(cocktail) %></h3>
          </div>
        </div>
        <% end %>
    </div>
  </div>
  <div class="text-center">
    <%= link_to "Add a Cocktail", new_cocktail_path, class:"btn btn-success mt-3" %>
  </div>
